#! /bin/bash
# See: https://ngzhian.wordpress.com/2013/01/11/what-i-learned-about-fonts/
# for information about font

. ~/.colors/jellybeans

#
# Panel base
#

PANEL_FIFO=/tmp/panel-fifo
PANEL_HEIGHT=28
PANEL_ALPHA=0.75
PANEL_FONT_FAMILY="-*-terminus-medium-r-normal-*-12-*-*-*-c-*-*-1"
# PANEL_FONT_FAMILY="-*-dejavu sans mono-medium-r-normal-*-11-*-*-*-m-*-iso10646-1"
PANEL_FONT_ICONS="-*-stlarch-medium-r-*-*-11-*-*-*-*-*-*-*"

#
# Colors
#

COLOR_BACKGROUND_ALPHA=$(toHex $(clamp $(toInt $(bc <<< $PANEL_ALPHA*255)) 0 255))
COLOR_BACKGROUND=$(echo "$COLOR_BG" | sed "s/#/#$COLOR_BACKGROUND_ALPHA/g")
COLOR_FOREGROUND="$COLOR_FG"

# After I get more monitors I can test this :p
COLOR_ACTIVE_MONITOR_FG="#FF34322E"
COLOR_ACTIVE_MONITOR_BG="#FF58C5F1"
COLOR_INACTIVE_MONITOR_FG="#FF58C5F1"
COLOR_INACTIVE_MONITOR_BG="#FF34322E"

COLOR_TITLE_BG="$COLOR_BACKGROUND"
COLOR_TITLE_FG="$COLOR_FG"
COLOR_TITLE_ICON_BG="$COLOR_BACKGROUND"
COLOR_TITLE_ICON_FG="$COLOR_LYELLOW"

COLOR_LAYOUT_BG="$COLOR_BACKGROUND"
COLOR_LAYOUT_FG="$COLOR_LMAGENTA"

COLOR_FREE_BG="$COLOR_BACKGROUND"
COLOR_FREE_FG="$COLOR_DARKGRAY"

COLOR_OCCUPIED_BG="$COLOR_BACKGROUND"
COLOR_OCCUPIED_FG="$COLOR_FG"

COLOR_URGENT_BG="$COLOR_BACKGROUND"
COLOR_URGENT_FG="$COLOR_LRED"

COLOR_FOCUSED_FREE_BG="$COLOR_DARKGRAY"
COLOR_FOCUSED_FREE_FG="$COLOR_FG"

COLOR_FOCUSED_OCCUPIED_BG="$COLOR_LGREEN"
COLOR_FOCUSED_OCCUPIED_FG="$COLOR_BACKGROUND"

COLOR_FOCUSED_URGENT_BG="$COLOR_LRED"
COLOR_FOCUSED_URGENT_FG="$COLOR_FG"

COLOR_NOTIFICATION_BG="$COLOR_BACKGROUND"
COLOR_NOTIFICATION_FG="$COLOR_LBLUE"

COLOR_WARNING_BG="$COLOR_BACKGROUND"
COLOR_WARNING_FG="$COLOR_LYELLOW"

COLOR_STATUS_BG="$COLOR_BACKGROUND"
COLOR_STATUS_FG="$COLOR_FG"

#
# Icons
#

ICON_LAYOUT_TILING='\uE009'
ICON_LAYOUT_MONOCLE='\uE001'

ICON_TITLE='\uE0B1'

ICON_MUSIC_PLAYING='\uE05C'
ICON_MUSIC_PAUSED='\uE059'

ICON_VOL_MUTED='\uE04F'
ICON_VOL_NORMAL='\uE04E'
ICON_VOL_HIGH='\uE050'

ICON_BAT_HIGH='\uE037'

ICON_CLOCK='\uE015'
